{
  "manifest_version": 3,
  "name": "LinkedIn Job Filter",
  "version": "1.0.0",
  "description": "Filter and sort LinkedIn job listings by Viewed, Applied, and Posted time",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.linkedin.com/jobs/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Job Filter"
  }
}
